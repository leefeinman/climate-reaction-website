---import Site from "@/layouts/Site.astro";import { loadPosts } from "@/lib/loadPosts";const posts = loadPosts();export async function getStaticPaths() {  return posts.map(p => ({ params: { slug: p.slug }, props: { p } }));}const { p } = Astro.props;const Post = p.Content;---<Site title={p.title} description={p.description}>  <article class="post-layout">    {p.date && <p class="post-date">{new Date(p.date).toLocaleDateString()}}</p>}    <h1 class="post-title">{p.title}</h1>    {p.heroImage && <img class="post-hero" src={p.heroImage} alt={p.title} />}    <Post />  </article></Site>