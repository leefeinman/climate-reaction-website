---// src/components/cards/PolicyCard.astroconst { entry } = Astro.props; // entry is a collection itemconst href = `/posts/${entry.slug}`;const { title, thumbImage, tags = [], description } = entry.data;---<a class="policy-card" href={href}>  <div class="policy-card__num">{/* optional index outside */}</div>  <div class="policy-card__text">    <h3 class="policy-card__title">{title}</h3>    <p class="policy-card__desc">{description}</p>    <div class="policy-card__tags">      {tags.map((t) => <span class="chip">{t}</span>)}    </div>  </div>  {thumbImage && <img class="policy-card__img" src={thumbImage} alt={title} />}</a>