---// src/components/cards/MisinfoCard.astroconst { entry } = Astro.props;const href = `/posts/${entry.slug}`;const { title, thumbImage, description } = entry.data;---<a class="misinfo-card" href={href}>  {thumbImage && <img class="misinfo-card__img" src={thumbImage} alt={title} />}  <div class="misinfo-card__body">    <h3>{title}</h3>    {description && <p>{description}</p>}  </div></a>