---// src/components/cards/EducationCard.astroconst { entry } = Astro.props;const href = `/posts/${entry.slug}`;const { title, thumbImage, tags = [] } = entry.data;---<a class="edu-card" href={href}>  {thumbImage && <img class="edu-card__img" src={thumbImage} alt={title} />}  <div class="edu-card__body">    <div class="edu-card__chips">      {tags.map((t) => <span class="chip">{t}</span>)}    </div>    <h3 class="edu-card__title">{title}</h3>  </div></a>