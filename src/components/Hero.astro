---
const { title = "Bridging Climate Science and Policy", subtitle = "Clear explainers, weekly policy roundups, and concrete action items for researchers." } = Astro.props;
---
<section class="px-6 py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold tracking-tight">{title}</h1>
    <p class="mt-4 text-lg text-gray-600 max-w-3xl">{subtitle}</p>
  </div>
</section>
