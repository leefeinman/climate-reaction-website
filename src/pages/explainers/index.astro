---
import Base from "../../layouts/Base.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("explainers");
---
<Base title="Explainers">
  <Header />
  <main class="px-6 py-12 max-w-6xl mx-auto">
    <h1 class="text-2xl font-semibold mb-6">Policy Explainers</h1>
    <ul class="space-y-3">
      {posts.map(p => (<li><a class="underline" href={`/explainers/${p.slug}/`}>{p.data.title}</a></li>))}
    </ul>
  </main>
  <Footer />
</Base>
