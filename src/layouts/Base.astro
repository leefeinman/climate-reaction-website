---
// Base.astro
const { title = "", description = "" } = Astro.props;
---
<!doctype html>
<html
  lang="en"
  data-wf-domain="arvora.webflow.io"
  data-wf-page="68c7aacf7c9fdb902f73c7cf"
  data-wf-site="68c7aacd7c9fdb902f73c74d"
>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <title>
      {title ? `${title} â€¢ Climate Policy for Scientists` : "Climate Policy for Scientists"}
    </title>
    <meta name="description" content={description} />

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/css/arvora.webflow.shared.69e669ceb-da604a6d.css" />
    <link rel="stylesheet" href="/assets/css/arvora.webflow.shared.69e669ceb.css" />

    <!-- Fonts: preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Load WebFont loader once, then call WebFont.load when it's ready (Safari-safe) -->
    <script is:inline>
      (function (d) {
        var s = d.createElement('script');
        s.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js';
        s.async = true;
        s.onload = function () {
          if (!window.WebFont) return;
          WebFont.load({
            google: {
              families: [
                'Manrope:400,500,600',
                'Instrument Sans:500,600'
                // Note: If you need Helvetica Neue, self-host it; it's not on Google Fonts.
              ]
            },
            timeout: 2000,
            active: function () {
              document.documentElement.classList.add('wf-active');
            },
            inactive: function () {
              document.documentElement.classList.add('wf-inactive');
            }
          });
        };
        d.head.appendChild(s);
      })(document);
    </script>

    <!-- Webflow helper to set w-mod classes (kept; does NOT call WebFont) -->
    <script is:inline>
      (function (o, c) {
        var n = c.documentElement, t = " w-mod-";
        n.className += t + "js";
        (("ontouchstart" in o) || (o.DocumentTouch && c instanceof DocumentTouch)) &&
          (n.className += t + "touch");
      })(window, document);
    </script>

    <!-- jQuery (kept as in your file; before any Webflow scripts if you add them later) -->
    <script
      src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="body">
    <slot />

    <!-- Site JS -->
    <script src="/assets/js/anim.js" type="module"></script>
  </body>
</html>
